<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Focus Box</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/static/style.css">
    <script>
        //Function for getting the button ids
        function getButtons(){
            //List of button ids
            var list = ["tasks", "categories"];
            return list;
        }

        //Make sure the window is loaded before we add listeners
        window.onload = function(){
            var pageIdList = getButtons();
            //Add an event listener to each button
            pageIdList.forEach(function(page){
                document.getElementById(page).addEventListener("click", changePage, false);
            });
        }

        function changePage(){
            if (this.id === "categories")
                window.location = "/categories"
            else if (this.id === "tasks")
                window.location = "/"
        }
    </script>
</head>
